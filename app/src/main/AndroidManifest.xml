<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.umn.fingagunz.gametime" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GameTimeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_gametime_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".TeamsActivity"
            android:label="@string/title_activity_teams" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeamDetailActivity"
            android:label="@string/title_activity_team_detail" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".UpcomingGamesActivity"
            android:label="@string/title_activity_upcoming_games" >
        </activity>
        <activity
            android:name=".AddEditGameActivity"
            android:label="@string/title_activity_add_edit_game" >
        </activity>
        <activity
            android:name=".AddEditTeamActivity"
            android:label="@string/title_activity_add_edit_team" >
        </activity>
        <activity
            android:name=".AddEditPlayerActivity"
            android:label="@string/title_activity_add_edit_player" >
        </activity>
        <activity
            android:name=".GameDetailActivity"
            android:label="@string/title_activity_game_detail" >
        </activity>
        <activity
            android:name=".AddExistingPlayerActivity"
            android:label="@string/title_activity_add_existing_player" >
        </activity>
    </application>

</manifest>
