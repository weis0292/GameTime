<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/game_detail_date_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="5/14/2015"/>

		<TextView
			android:id="@+id/game_detail_time_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="6:00 PM"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/ic_map_marker_grey600_24dp"/>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/game_detail_location_description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Example Game Location Description"/>

			<TextView
				android:id="@+id/game_detail_location_address_1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="123 Fake Address"/>

			<TextView
				android:id="@+id/game_detail_location_address_2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Springfield ST, 55555"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"></LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">

		<ImageView
			android:id="@+id/game_detail_accept_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:clickable="true"
			android:src="@mipmap/ic_thumb_down_grey600_24dp"/>

		<ImageView
			android:id="@+id/game_detail_maybe_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:clickable="true"
			android:src="@mipmap/ic_thumbs_up_down_grey600_24dp"/>

		<ImageView
			android:id="@+id/game_detail_decline_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="16dp"
			android:clickable="true"
			android:src="@mipmap/ic_thumb_up_grey600_24dp"/>

	</LinearLayout>

</LinearLayout>
